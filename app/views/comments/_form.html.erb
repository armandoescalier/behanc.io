 <div>
    <div class="project_comments">
         <div class="card project_comments_card">
          <%= image_tag current_user.profile_img, class: "user_profile_image smaller" %>
            <div class="full_width">
            <%= form_for(@project, url: project_comments_path(@project), method: :post) do |f| %>
                <%= render "devise/shared/error_messages", resource: @project %>
                
                <div class="field comments_box">
                  <h4><%= f.label :comment %></h4>
                  <textarea class="project_comments text_area" placeholder = "What are your thoughts on this project?" name="comment[content]"> </textarea>
                </div>

                <div class="flex_direction_rows_reverse">
                <%= f.submit "Post a comment" %>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>