<div class="card">
  <h1>Update project</h1>

  <%= form_for(@project, url: project_path(@project.id), method: :put) do |f| %>
    <%= render "devise/shared/error_messages", resource: @project %>
      <div class="field">
        <h4><%= f.label :title %></h4>
        <%= f.text_field :title %>
      </div>
    
      <div class="field">
        <h4><%= f.label :description %></h4>
        <%= f.text_field :description %>
      </div>

      <div class="field">
        <h4><%= f.label :cover_image %></h4>
        <%= f.file_field :cover_image %>
      </div>

      <div class="field">
        <h4><%= f.label :category %></h4>
        
        <fieldset>
          <% Project::CATEGORIES.each do |category| %>
            <div class="category_with_label">
              <%= f.radio_button :category, category %>
              <%= f.label :category, category %>
            </div>
          <% end %>
        </fieldset>
      </div>

      <div>
        <h4><%= f.label :content %></h4>
        <%= f.rich_text_area :content %>
      </div>

      <div class="actions">
        <%= f.submit "Update project" %>
      </div>
  <% end %>
</div>